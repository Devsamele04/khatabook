<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>khatabook</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gradient-to-br from-blue-50 via-white to-pink-50 min-h-screen">
    <div class="main min-h-screen flex flex-col">
      <!-- Navbar -->
      <nav class="flex justify-between items-center bg-white/80 shadow-md border-b px-10 py-5 sticky top-0 z-10 backdrop-blur">
        <div class="flex items-center gap-2">
          <span class="text-3xl font-bold text-red-700">Khata</span>
          <span class="text-3xl font-bold text-gray-800">book_</span>
        </div>
        <div class="flex gap-8">
          <a class="text-lg font-medium text-gray-700 hover:text-blue-700 transition" href="/">Home</a>
          <a class="text-lg font-medium text-orange-700 hover:text-orange-900 transition flex items-center gap-1" href="/create">
            <i class="ri-add-circle-line"></i>
            Create new <span class="font-bold">Hisaab</span>
          </a>
        </div>
      </nav>
      <!-- Header -->
      <header class="px-10 mt-10 mb-4">
        <h1 class="text-4xl font-extrabold text-gray-800 mb-2 tracking-tight">All Hisaab Kitaab...</h1>
        <p class="text-gray-500 text-lg">Manage your accounts with ease and style.</p>
      </header>
      <!-- Hisaab List -->
      <section class="flex-1 px-10">
        <div class="flex flex-col gap-5 max-w-2xl mx-auto">
          <% if(files.length>0){ %>
            <% files.forEach(function(file){ %>
              <div class="flex items-center justify-between bg-gradient-to-r from-blue-500 via-blue-400 to-blue-300 shadow-lg rounded-xl px-6 py-4 transition hover:scale-[1.02] hover:shadow-2xl">
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center shadow">
                    <i class="ri-book-2-line text-blue-600 text-2xl"></i>
                  </div>
                  <h3 class="text-xl font-semibold text-white tracking-wide"><%=file.split(".")[0]%></h3>
                  <a
                    class="ml-2 w-8 h-8 flex items-center justify-center rounded-full bg-white hover:bg-blue-100 transition"
                    href="/hisaab/<%= file %>"
                    title="View"
                  >
                    <i class="ri-arrow-right-line text-blue-700 text-xl"></i>
                  </a>
                </div>
                <div class="flex gap-3">
                  <a class="w-8 h-8 flex items-center justify-center rounded-full bg-white hover:bg-yellow-100 transition" href="/edit/<%= file %>" title="Edit">
                    <i class="ri-pencil-line text-yellow-700 text-xl"></i>
                  </a>
                  <a class="w-8 h-8 flex items-center justify-center rounded-full bg-white hover:bg-red-100 transition" href="/delete/<%= file%>" title="Delete">
                    <i class="ri-delete-bin-5-line text-red-700 text-xl"></i>
                  </a>
                </div>
              </div>
            <% }) %>
          <% }else{ %>
            <div class="flex flex-col items-center justify-center mt-20">
              <i class="ri-folder-warning-line text-6xl text-red-300 mb-4"></i>
              <h3 class="text-red-400 text-2xl font-semibold mb-2">Nothing to see here!</h3>
              <p class="text-gray-500">Create a file to get started...</p>
            </div>
          <% } %>
        </div>
      </section>
    </div>
  </body>
</html>
